@model MeetingMinutes.Models.MeetingItem



<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Upload Files</h5>
        <section>
            <form method="post" enctype="multipart/form-data"
                  asp-controller="MeetingItem" asp-action="UploadFile">
                <div class="form-group">
                    <div class="col-md-10">
                        <input asp-for="@Model.Files" type="file" multiple />
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>